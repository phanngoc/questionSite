<header class="navbar navbar-fixed-top">
  <div class="container">
    <a id="logo" href="/">
      <%= image_tag "apple-touch-icon@2.png", size: "60x60", alt: "Ask & answer" %>
    </a>
    <nav class="navbar-cus">
      <div class="search-bar">
        <div class="wr-search">
          <form class="" action="/search" method="get">
            <div class="input-group add-on selector_input_interaction">
              <input class="form-control" placeholder="Search" name="word_search" id="srch-term" type="text" value="<%= params[:word_search] %>">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>

            <div class="result-question-search" style="display: none">
              <div class="inner-load-result">

              </div>
            </div>
          </form>
        </div>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/">Home</a></li>
        <li><a href="/help">Help</a></li>

        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu dash-profile">
              <li><a href="/users/1">Profile</a></li>
              <li>
                <a href="<%= edit_user_registration_path %>">Edit Profile</a>
              </li>
              <li class="divider"></li>
              <li>
                <a rel="nofollow" data-method="delete" href="<%= destroy_user_session_path %>">Logout</a>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>
          </li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
