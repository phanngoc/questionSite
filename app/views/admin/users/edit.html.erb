<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t('admin.user.edit.title') %>
    <small><%= t('admin.user.edit.sub_title') %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>List user</a></li>
    <li class="active">Edit user</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <!-- /.content -->
  <%= simple_form_for [:admin, @user] do |f| %>
    <%= f.input :name, autofocus: true %>

    <%= f.input :story, as: :text, autofocus: true %>

    <%= f.input :email, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.input :avatar, as: :file %>

    <div class="form-img-preview">
      <img src="<%= @user.avatar %>" alt="" class="img_40">
    </div>

    <div class="form-group">
      <label for="user[role]">Role</label>
      <%= f.select(:role, User::roles.keys.map {|role| [role.titleize, role]}, {}, { :class => 'form-control' }) %>
    </div>

    <div class="actions">
      <%= f.button :submit, value: t("admin.user.edit.save") %>
    </div>

  <% end %>
</section>
