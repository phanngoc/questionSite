<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t("admin.user.list.title") %>
    <small><%= t("admin.user.list.sub_title") %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= admin_path %>"><i class="fa fa-dashboard"></i><%= t("admin.home") %></a></li>
    <li class="active"><%= t("admin.user.list.title") %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
	<table id="list-users" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th><%= t("admin.user.list.name") %></th>
                <th><%= t("admin.user.list.email") %></th>
                <th><%= t("admin.user.list.story") %></th>
                <th><%= t("admin.user.list.avatar") %></th>
                <th><%= t("admin.user.list.register_date") %></th>
                <th><%= t("admin.user.list.role") %></th>
                <th><%= t("admin.user.list.action") %></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th><%= t("admin.user.list.name") %></th>
                <th><%= t("admin.user.list.email") %></th>
                <th><%= t("admin.user.list.story") %></th>
                <th><%= t("admin.user.list.avatar") %></th>
                <th><%= t("admin.user.list.register_date") %></th>
                <th><%= t("admin.user.list.role") %></th>
                <th><%= t("admin.user.list.action") %></th>
            </tr>
        </tfoot>
        <tbody>
            <% @users.each do |user| %>
            	<tr>
	            	<td><%= user.name %></td>
	            	<td><%= user.email %></td>
	            	<td><%= user.story %></td>
	            	<td><img src="<%= asset_path(user.avatar) %>" class="img_25" /></td>
	            	<td><%= user.created_at %></td>
	            	<td><%= user.role %></td>
	            	<td>
	            		<a href="<%= edit_admin_user_path(user.id) %>"><i class='fa fa-pencil-square-o' aria-hidden='true'></i></a>
	            	</td>
	            </tr>
            <% end %>
        </tbody>
    </table>

</section>
<!-- /.content -->