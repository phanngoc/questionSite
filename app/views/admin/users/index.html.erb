<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    List user
    <small>Optional description</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
    <li class="active">Here</li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
	<table id="list-users" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Story</th>
                <th>Avatar</th>
                <th>Registed date</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Story</th>
                <th>Avatar</th>
                <th>Registed date</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            <% @users.each do |user| %>
            	<tr>
	            	<td><%= user.name %></td>
	            	<td><%= user.email %></td>
	            	<td><%= user.story %></td>
	            	<td><img src="<%= asset_path(user.avatar) %>" class="img_25" /></td>
	            	<td><%= user.created_at %></td>
	            	<td><%= user.role %></td>
	            	<td>
	            		<a href="<%= admin_user_path(user.id) %>" method="DELETE"><i class='fa fa-times' aria-hidden='true'></i></a>
	            		<a href="<%= edit_admin_user_path(user.id) %>"><i class='fa fa-pencil-square-o' aria-hidden='true'></i></a>
	            	</td>
	            </tr>
            <% end %>
        </tbody>
    </table>

</section>
<!-- /.content -->