<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t "admin.topic.list.title" %>
    <small><%= t "admin.topic.list.sub_title" %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="<%= admin_path %>"><i class="fa fa-dashboard"></i> 
      <%= t "admin.home" %></a></li>
    <li class="active"><%= t "admin.topic.list.title" %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <table id="list-topics" class="table table-striped table-bordered" 
    cellspacing="0" width="100%">
    <thead>
      <tr>
        <th><%= t "admin.topic.list.name" %></th>
        <th><%= t "admin.topic.list.description" %></th>
        <th><%= t "admin.topic.list.icon" %></th>
        <th><%= t "admin.topic.list.action" %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th><%= t "admin.topic.list.name" %></th>
        <th><%= t "admin.topic.list.description" %></th>
        <th><%= t "admin.topic.list.icon" %></th>
        <th><%= t "admin.topic.list.action" %></th>
      </tr>
    </tfoot>
    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td><%= topic.name %></td>
          <td><%= topic.description %></td>
          <td><img src="<%= asset_path(topic.icon) %>" class="img_25" />
          </td>
          <td>
            <a href="<%= admin_topic_path(topic.id) %>" 
              data-method="delete" rel="nofollow">
              <i class="fa fa-times" aria-hidden="true"></i></a>
            <a href="<%= edit_admin_topic_path(topic.id) %>">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @topics %>
</section>
<!-- /.content -->