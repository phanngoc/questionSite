<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <%= t "admin.question.list.title" %>
    <small><%= t "admin.question.list.sub_title" %></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/admin"><i class="fa fa-dashboard"></i> <%= t "admin.home" %></a></li>
    <li class="active"><%= t "admin.question.list.title" %></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <%= link_to t("admin.user.list.btn_export_csv"), 
    admin_questions_path(format: :csv), class: "btn btn-primary" %>
	<table id="list-topics" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
          <th><%= t "admin.question.list.table.title" %></th>
          <th><%= t "admin.question.list.table.user" %></th>
          <th><%= t "admin.question.list.table.topic" %></th>
          <th><%= t "admin.question.list.table.action" %></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
          <th><%= t "admin.question.list.table.title" %></th>
          <th><%= t "admin.question.list.table.user" %></th>
          <th><%= t "admin.question.list.table.topic" %></th>
          <th><%= t "admin.question.list.table.action" %></th>
        </tr>
    </tfoot>
    <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><a href="<%= question_path(question.slug) %>"> 
              <%= question.title %></a>
              <a href="<%= admin_question_path(question.id) %>" class="text-right">
                <i class="fa fa-line-chart" aria-hidden="true"></i></a>
            </td>
            <td>
                <img src="<%= question.user.avatar %>" class="img_25" />
                <span><%= question.user.name %></span>
            </td>
            <td>
              <% question.topics.each do |topic| %>
                <span class="item_topic">
                  <a href="<%= topic_path(topic.id) %>"><%= topic.name %></a>
                </span>
              <% end %>
            </td>
            <td>
              <a href="<%= question_path(question.id) %>">
                  <i class="fa fa-eye" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
        <% end %>
    </tbody>
  </table>
  <%= will_paginate @questions %>

  <div class="box">
    <div class="box-header with-border">
      <h4 class="box-title">
        <%= t "admin.question.list.count_question_created" %>
      </h4>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" 
          data-toggle="tooltip" title="" data-original-title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" 
          data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>  
    </div>
    <div class="box-body">
      <%= line_chart Question.group_by_day(:created_at).count %>
    </div>
  </div>

  <div class="box">
    <div class="box-header with-border">
      <h4 class="box-title">
        <%= t "admin.question.list.analytic_up_vote" %>
      </h4>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" 
          data-toggle="tooltip" title="" data-original-title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" 
          data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>  
    </div>
    <div class="box-body">
      <%= line_chart Action.is_upvote.group_by_day(:created_at).count %>
    </div>
  </div>

  <div class="box">
    <div class="box-header with-border">
      <h4 class="box-title"><%= t "admin.question.list.percentage_action" %></h4>
      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse" 
          data-toggle="tooltip" title="" data-original-title="Collapse">
          <i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove" 
          data-toggle="tooltip" title="Remove">
          <i class="fa fa-times"></i></button>
      </div>
    </div>
    <div class="box-body">
      <%= pie_chart Action.group(:type_act).count %>
    </div>
  </div>
</section>
<!-- /.content -->
