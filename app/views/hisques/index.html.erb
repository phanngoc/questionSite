<div id="wr-list-ver container">
  <div class="inner-list-ver row">
    <div class="col-md-8 col-md-offset-1">
      <div class="list-version-all">
        <div class="original">
          <div class="header">
            <div class="title">
              <h4><%= @question.title %></h4>
            </div>
            <div class="wr-author">
              <div class="wr-image">
                <%= image_tag @question.user.avatar, class: "img_40 avatar" %>
              </div>
              <div class="wr-name">
                <p class="name"><%= @question.user.name %></p>
              </div>
            </div>
          </div>
          <div class="content">
            <%= @question.content %>
          </div>
        </div>
        <ul class="list-version">
          <% @verques.each do |verque| %>
            <div class="item-verque">
              <div class="header">
                <div class="rev clear">
                  <%= t("version_question.rev") %> <%= verque.version %>
                </div>
                <div class="title">
                  <h4><%= verque.title %></h4>
                </div>
                <div class="wr-author">
                  <div class="wr-image">
                    <%= image_tag verque.user.avatar, class: "img_40 avatar" %>
                  </div>
                  <div class="wr-name">
                    <p class="name"><%= verque.user.name %></p>
                  </div>
                </div>
              </div>
              <div class="content">
                <%= verque.content %>
              </div>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
