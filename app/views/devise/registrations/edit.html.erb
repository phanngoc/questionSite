<div id="edit-profile-current-user" class="row">
  <div class="panel panel-primary center-block profile-inner">
    <div class="panel-heading"><h2>Edit <%= resource_name.to_s.humanize %></h2></div>
    <div class="panel-body">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :name, autofocus: true %>

          <%= f.input :story,as: :text, autofocus: true %>

          <%= f.input :email, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <%= f.input :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>

          <%= f.input :password_confirmation, autocomplete: "off" %>

          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>

          <%= f.input :avatar, as: :file %>

          <div class="actions">
            <%= f.button :submit, value: "Save" %>
          </div>

        <% end %>
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
    </div>
  </div>
</div>
