<li>
  <span>
    <% if a.trackable.commentable.class.name == "Question" %>
      <a href="<%= question_path(a.trackable.commentable.id) %>"><%= a.trackable.commentable.title %></a>
    <% else %>
      <a href="<%= question_path(a.trackable.commentable.question.id) %>"><%= a.trackable.commentable.question.title %></a>
    <% end %>

    <%= t "activity.up_vote" %>
    <% if a.owner.present? %>
      <b class="owner_name"><%= a.owner.name %></b>
    <% end %>
  </span>
</li>
